<h1>{{categoria.nome}}</h1>
{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-info">Leia Mais</button></a>
            <hr>
            <small>Data de publicação: {{data}} </small>
            
        </div>
    </div>

{{else}}
<h4>Sem postagens!</h4>
{{/each}}